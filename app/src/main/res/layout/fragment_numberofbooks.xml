<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCAF45"
    tools:context=".numberofbooks">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To School\nLibrary"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity of Books:"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.054"></TextView>



    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <RadioGroup
            android:id="@+id/bookGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/book1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/book2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/book3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25dp"
                android:layout_marginTop="10dp" />

        </RadioGroup>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="326dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.096">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvBook1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Book:"
                android:textColor="@color/black"
                android:textSize="22dp"></TextView>

            <EditText
                android:id="@+id/nameofbook1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME OF BOOK1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvBook2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Book:"
                android:textColor="@color/black"
                android:textSize="22dp"></TextView>

            <EditText
                android:id="@+id/nameofbook2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME OF BOOK2"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Book:"
                android:textColor="@color/black"
                android:textSize="22dp"></TextView>

            <EditText
                android:id="@+id/nameofbook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME OF BOOK3"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:text="Go to Librarian Desk
for the Book confirmation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.355" />

    <Button
        android:id="@+id/submitbooksbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#008000"
        android:text="SUBMIT"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.437" />

</androidx.constraintlayout.widget.ConstraintLayout>